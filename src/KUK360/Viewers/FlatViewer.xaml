<UserControl x:Class="KUK360.Viewers.FlatViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:kuk360Controls="clr-namespace:KUK360.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource KukColorViewerBackground}">
        <Canvas Name="flatCanvas" ClipToBounds="True" 
                MouseLeftButtonDown="FlatCanvas_MouseLeftButtonDown" 
                MouseMove="FlatCanvas_MouseMove" 
                MouseUp="FlatCanvas_MouseUp" 
                MouseWheel="FlatCanvas_MouseWheel"
                SizeChanged="FlatCanvas_SizeChanged">
            <!-- Image control is added here dynamically -->
        </Canvas>
        <kuk360Controls:ZoomControl 
            x:Name="zoomControl" 
            Minimum="1" 
            Maximum="400" 
            Visibility="Visible" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Stretch" 
            ZoomValueChanged="zoomControl_ZoomValueChanged" />
    </Grid>
</UserControl>
